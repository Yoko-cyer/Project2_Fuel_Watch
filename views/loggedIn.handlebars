<header>
  <h1 style="font-size:5vh; width:100vw; text-align: center; margin: 5vh;">
    Top 5 In your area
  </h1> 

</header>
<section class="container col-md-8">
  <ul class="list-group" style="font-size: 2vh;">
    {{#each fuelData as |fuel|}}
    <li class="list-group-item list-group-item-action list-group-item-dark" id="1">
      {{fuel}}
    </li>

    {{/each}}
    
  </ul>
</section>
<button class="btn btn-primary justify-content-right align-items-center" type="button" data-toggle="collapse" data-target="#settings" aria-expanded="false" aria-controls="settings">
    <<
</button>
<aside class="collapse justify-content-right col-md-3 bg-dark text-light rounded pt-3 mb-2" id="settings" style="margin-left: 2vw">

  <form class="form change-form">

    <div class="form-group">
      <label for="suburb-change">Suburb</label>
      <input type="text" class="form-control" id="suburb-change" placeholder="Suburb">
    </div>

    <br>

      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="surrounding-change">
        <label class="custom-control-label" for="surrounding-change">Include srounding area</label>
      </div>
    <br>

      <label for="fuel-change">Fuel Type</label>
        <select name="fuel-type" id="fuel-change">
          <option value="1">Regular unleaded petrol (91)</option>
          <option value="2">E10</option>
          <option value="4">Premium unleaded petrol (95)</option>
          <option value="5">Premium unleaded petrol (98)</option>
          <option value="6">E85</option>
          <option value="10">Diesel</option>
          <option value="11">Liquefied petroleum gas (LPG)</option>
        </select>

    <br>

    <div class="form-group">
      <button class="btn btn-secondary" type="submit">Submit</button>
    </div>
  </form>
</aside>
